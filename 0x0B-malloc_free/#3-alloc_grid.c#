#include "main.h"
#include <stdlib.h>

/**
 * alloc_grid - function that returns a po

int **alloc_grid(int width, int height)
{
	int i, j;

	if ((height <= 0) || (width <= 0))
	{
		return (0);
	}

	int **dptr = malloc(height * sizeof(int *));

	if (dptr == NULL)
	{
		return (NULL);
	}

	else
	{
		for (i = 0; i < height; i++)
		{
			dptr[i] = malloc(width * sizeof(int));

			if (dptr[i] == NULL)
			{
				free (dptr);
				return (NULL);
			}

			else
			{
				for (j = 0; j < width; j++)
				{
					dptr[i][j] = 0;
				}
			}
		}
		return (dptr);
	}
