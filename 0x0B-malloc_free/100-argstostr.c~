#include "main.h"
#include <stdlib.h>

/**
 * _strlen - function that returns the length of a sting
 * @str: string to be counted
 *
 * Return: Length of the string
 */

int _strlen(char *str)
{
  int count = 0;

  while (*str)
    {
      count++;
      str++;
    }
  return (count);
}  



