#include "main.h"

/**
 * factorial - function to calculate the factorial of a number
 * @n: number to be calculated
 *
 * Return: Factorial value of a number
 */

int factorial(int n)
{
	if (n > 0)
	{
		return (n * factorial(n - 1));
	}

	else if (n == 0)
	{
		return (1);
	}

	else
	{
		return (0);
	}
}
